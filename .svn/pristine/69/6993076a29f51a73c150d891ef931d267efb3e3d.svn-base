<style>
    .k-upload-status {
        display: none;
    }
</style>

<form class=" form" id="CMRemarksTemplate">
    <div class="row">
        <div class="col-md-12 col-lg-6">
            <div class="form-group ">
                <div class=" text-left form-group">
                    <div class="  input-wrap is-required">
                        <label class="label-input-pos required-label" string="NameEn"></label>
                        <input type="text" name="remarksTemplateName" class="form-control input-sm" id="remarksTemplateName" />
                    </div>
                    <div class=" mt-1 is-helpful" data-helper="Enter_Name" data-error="Please_Name"></div>
                </div>
            </div>
        </div>
        <div class="col-md-12 col-lg-6 ">
            <div class="form-group  ">
                <div class=" text-left form-group">
                    <div class="  input-wrap is-required">
                        <label class="label-input-pos required-label" string="NameAr"></label>
                        <input type="text" name="remarksTemplateNameAr" class="form-control input-sm" id="remarksTemplateNameAr" />
                    </div>
                    <div class=" mt-1 is-helpful" data-helper="Enter_NameAr" data-error="Please_NameAr"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">


        <div class="col-md-12 col-lg-3">
            <div class="form-group ">
                <div class="  input-wrap ">
                    <label class="label-input-pos " string="NumberOfMandatory"></label>
                    <input type="text" class="form-control input-sm" id="NumberOfMandatory" name="NumberOfMandatory" value="1" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*)\./g, '$1'); this.value <= 0 ? this.value = 1 : this.value = this.value;" />
                </div>
                <div class=" mt-1 is-helpful" data-helper="Please_NumberOfMandatory" data-error="Please_NumberOfMandatory"></div>
            </div>
        </div>


        <div class=" col-md-12 col-lg-3">
            <div class="form-group ">
                <div class="  input-wrap">
                    <label class="label-input-pos " string="UpperLimitForAdditions"></label>
                    <input type="text" class="form-control input-sm" id="UpperLimitForAdditions" name="UpperLimitForAdditions" value="0" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*)\./g, '$1');(this.value < 0 || this.value === '') ? this.value = 0 : this.value = this.value;" />
                </div>
                <div class=" mt-1 is-helpful" data-helper="Please_UpperLimitForAdditions" data-error="Please_UpperLimitForAdditions"></div>
            </div>
        </div>

        <div class=" col-md-12 col-lg-6 ">

            <div class="form-group ">
                <label class="control control--checkbox">
                    <p string="InActive"></p>
                    <input type="checkbox" id="InActive" />
                    <div class="control__indicator">
                    </div>
                </label>
            </div>
        </div>


    </div>

    <div class="row">
        <div class="col-md-12 " >
            <input type="hidden" id="RemarksTemplateID" />

            <div id="RDgrid"></div>
        </div>
    </div>


    <input type="hidden" id="RemarksTemplateID" value="" />
    <div class="app-modal-footer d-flex justify-content-center mt-3 invisible" id="btnForm">
        <button type="button" class="browse btn btn-primary mr-2 w-100" onclick="SaveUpdate()" string="Save" id="Save">save</button>
        <a onclick="Destroy()" type="button" class="browse btn  btn-danger text-white mx-auto  w-100" string="Close" id="Close">cancel</a>
    </div>
    <div class="alert alert-dismissible fade  " role="alert" id="ResultMessage">
        <div id="ResultTxt">

        </div>
    </div>
</form>

<script src="../../Scripts/CMPages/CMRemarksTemplate.js"></script>
<!--<script src="../../Scripts/CMPages/CMRemarksTemplateDetails.js"></script>-->
